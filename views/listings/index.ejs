<% layout("layouts/boilerplate") %>

<style>
  .filters {
    display: flex;
    overflow-x: auto;
    padding: 1rem 0;
    gap: 1.5rem;
    align-items: center;
    border-bottom: 1px solid #ddd;
  }
  .filter {
    flex: 0 0 auto;
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
  }
  .filter:hover {
    opacity: 1;
  }
  .filter p {
    font-size: 1rem;
    margin-top: 0.5rem;
  }


  .listing-card img {
    height: 16rem;
    object-fit: cover;
  }

  
</style>

<div class="container-fluid">
  <div class="filters">
    <div class="filter">
      <div><i class="fa-solid fa-road"></i></div>
      <p>Potholes</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-trash-can"></i></div>
      <p>Garbage</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Sewage</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Dumping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-plug-circle-exclamation"></i></div>
      <p>Street-Light</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-house-flood-water"></i></div>
      <p>Water-Logging</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-toilet"></i></div>
      <p>Public Toilets</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-hammer"></i></div>
      <p>Construction</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bolt"></i></div>
      <p>Electricity</p>
    </div>
    
    
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-3">
    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
          <div class="card listing-card h-100">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image">
            <div class="card-body">
              <p class="card-text">
                <strong><%= listing.title %></strong><br>
                
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>


